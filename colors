#!/bin/bash

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
WHITE='\033[0;37m'

# Bold Colors
BOLD_RED='\033[1;31m'
BOLD_GREEN='\033[1;32m'
BOLD_YELLOW='\033[1;33m'

# Background Colors
BG_RED='\033[41m'
BG_GREEN='\033[42m'

# Light (bold) colors
LIGHT_RED='\033[1;31m'
LIGHT_GREEN='\033[1;32m'
LIGHT_BLUE='\033[1;34m'
LIGHT_PURPLE='\033[1;35m'
LIGHT_CYAN='\033[1;36m'
LIGHT_YELLOW='\033[1;33m'

# Dim (dark) colors
DIM_RED='\033[2;31m'
DIM_GREEN='\033[2;32m'
DIM_BLUE='\033[2;34m'
DIM_YELLOW='\033[2;33m'

# No Color
NC='\033[0m'
RESET='\033[0m'